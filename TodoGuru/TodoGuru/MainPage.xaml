<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoGuru.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="60" CornerRadius="0">
            <Label Text="Task Categories" HorizontalTextAlignment="Start" TextColor="White" FontSize="26"/>
        </Frame>
        <Entry x:Name="TodoEntry" Placeholder="Enter new todo item"/>
        <Button Text="Add Todo" Clicked="OnAddTodoClicked"/>
        <CollectionView x:Name="TodoCollectionView">
          <CollectionView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding taskName}"/>
            </DataTemplate>
          </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>

