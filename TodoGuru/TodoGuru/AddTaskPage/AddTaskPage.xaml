<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TodoGuru.AddTaskPage.AddTaskPage">
    <ContentPage.Content>
    <StackLayout>
        <Frame BackgroundColor="#8BC800" Padding="10,60,10,10" CornerRadius="0">
            <Label Text="Add Task" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextColor="White" FontSize="26"/>
        </Frame>
        <StackLayout Padding="10,10,10,10">

            <Entry Placeholder="Task Name" x:Name="taskNameEntry" />

            <DatePicker x:Name="dueDatePicker" />

            <Picker x:Name="categoryPicker" Title="Select Category" PropertyChanged="categoryPicker_PropertyChanged"/>
            <Entry Placeholder="Enter New Category" x:Name="newCategoryEntry"/>

            <Editor Placeholder="Task Description" x:Name="taskDescriptionEditor" />

            <Button Text="Create Task" Clicked="OnCreateTaskClicked" />
        </StackLayout>
     </StackLayout>
    </ContentPage.Content>
</ContentPage>