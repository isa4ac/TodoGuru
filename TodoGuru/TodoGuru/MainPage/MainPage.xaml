<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoGuru.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#8BC800"  Padding="10,60,10,10" CornerRadius="0">
            <Label Text="To-do Guru" HorizontalTextAlignment="Start" TextColor="White" FontSize="26"/>
        </Frame>
        <Button Text="Create Task" Clicked="OnCreateTaskClicked" />
        <CollectionView x:Name="TodoCollectionView">
          <CollectionView.ItemTemplate>
            <DataTemplate>
              <StackLayout Orientation="Horizontal" Padding="10,0,10,10">
                  <CheckBox IsChecked="{Binding complete}" />
                  <StackLayout>
                    <Label Text="{Binding taskName}"/>
                    <Label Text="{Binding dueDate}"/>
                   </StackLayout>
               </StackLayout>
            </DataTemplate>
          </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>

